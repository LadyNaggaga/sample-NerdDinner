        @RenderBody()
    </div>
    <environment names="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-1.10.2.min.js" 
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="//ajax.aspnetcdn.com/ajax/bootstrap/3.0.0/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery">
        </script>
    </environment>

    @RenderSection("scripts", required: false)
    <div class="container body-content">
        <footer class="bg-footer text-center">
            <p>
                Nerd Dinner ASP.NET Core Sample 2016
                <a href="https://github.com/LadyNaggaga/sample-NerdDinner"> Source Code</a>.
            </p>
