@page
@model LoginModel
@using System.Collections.Generic
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authentication
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewBag.Title = "Log On";
}

<div class="container main-view">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h4>@ViewBag.Title</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 bordered">
            <section id="loginForm">
                <form asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
                    <h4>using a Nerd Dinner account</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
                            <input type="submit" value="Log On" class="btn btn-default" />
                            <span class="login-display">or <a class="link" href="/account/register" >Register</a></span>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 bordered">
            <section id="socialLoginForm">
                <h4>Use another service to log in</h4>
                @{

                    if (Model.ExternalLogins.Count == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                                for details on setting up this ASP.NET application to support logging in via external services.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form action="/account/externalLogin"  method="post" class="form-horizontal" role="form">

                            <div id="socialLoginList">
                                <p>
                                    @foreach (AuthenticationScheme p in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-default" id="@p.Name" name="provider" value="@p.Name" title="Log in using your @p.DisplayName account">@p.Name</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
